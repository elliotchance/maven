int chcount = 0;
int wdcount = 1;          // space between words
char ch = 'a';            // ensure it isn't '\r'

System.print("Enter a phrase: ");
while((ch = System.getInlineChar()) != '\n') {
	if(ch == ' ') wdcount++;
	else chcount++;
}

System.println("Words = " + wdcount);
System.println("Letters = " + (chcount - 1));
